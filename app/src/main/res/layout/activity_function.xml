<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/title_padding_top_bottom"
        android:paddingTop="@dimen/title_padding_top_bottom"
        android:background="@color/black_title">

        <TextView
            android:fitsSystemWindows="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/exam_system"
            android:textSize="@dimen/function_text_size"
            android:textColor="@color/white"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@color/view_color"/>

        <LinearLayout
            android:id="@+id/btn_fill"
            android:layout_width="match_parent"
            android:layout_height="@dimen/function_height"
            android:orientation="vertical"
            android:background="@drawable/btn_color_selector">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/function_img_height"
                android:layout_marginTop="10dp"
                android:src="@drawable/fill_info"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/fill_info"
                android:textSize="@dimen/function_text_size"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_modify"
            android:layout_width="match_parent"
            android:layout_height="@dimen/function_height"
            android:orientation="vertical"
            android:background="@drawable/btn_color_selector">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/function_img_height"
                android:layout_marginTop="10dp"
                android:src="@drawable/modify_info"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/modify_info"
                android:textSize="@dimen/function_text_size"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/function_height"
            android:orientation="vertical"
            android:background="@drawable/btn_color_selector">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/function_img_height"
                android:layout_marginTop="10dp"
                android:src="@drawable/confirm"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/confirm_info"
                android:textSize="@dimen/function_text_size"
                android:textColor="@color/black"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@color/view_color"/>

        <LinearLayout
            android:id="@+id/btn_modify_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/function_height"
            android:orientation="vertical"
            android:background="@drawable/btn_color_selector">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/function_img_height"
                android:layout_marginTop="10dp"
                android:src="@drawable/modify_password"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/modify_password"
                android:textSize="@dimen/function_text_size"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_log_off"
            android:layout_width="match_parent"
            android:layout_height="@dimen/function_height"
            android:orientation="vertical"
            android:background="@drawable/btn_color_selector">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/function_img_height"
                android:layout_marginTop="10dp"
                android:src="@drawable/log_off"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/log_off"
                android:textSize="@dimen/function_text_size"
                android:textColor="@color/black"/>

        </LinearLayout>
    </LinearLayout>


