<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:whatever="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="考生通讯地址"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/et_21"
            style="@style/fill_edit_no_gravity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="点击选择省市区/镇"
            android:paddingTop="10dp"
            android:textSize="@dimen/fill_text_size"/>

        <EditText
            android:id="@+id/et_211"
            style="@style/fill_edit_no_gravity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="填写详细地址"
            android:textSize="@dimen/fill_text_size"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考生通讯地址邮政编码"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size"/>

        <EditText
            android:id="@+id/et_22"
            style="@style/fill_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="限6位数字"
            android:inputType="number"
            android:maxLength="6"
            android:textSize="@dimen/fill_text_size"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="固定电话"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size"/>

        <EditText
            android:id="@+id/et_23"
            style="@style/fill_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="限11位，区号+号码"
            android:inputType="number"
            android:maxLength="11"
            android:textSize="@dimen/fill_text_size"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="移动电话"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size"/>

        <EditText
            android:id="@+id/et_24"
            style="@style/fill_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="限11位号码"
            android:inputType="phone"
            android:maxLength="11"
            android:textSize="@dimen/fill_text_size"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电子邮箱（非必填）"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size"/>

        <com.andreabaccega.widget.FormEditText
            android:id="@+id/et_25"
            style="@style/fill_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="填写电子邮箱"
            android:textSize="@dimen/fill_text_size"
            whatever:testType="email"/>

    </LinearLayout>

</LinearLayout>
    <!--android:inputType="textEmailAddress"-->